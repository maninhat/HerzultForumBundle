{% extends 'HerzultForumBundle::layout.html.twig' %}
{% block forum_title %}Simple forum bundle for Symfony{% endblock %}
{% block forum_content %}
<div class="forum forum_index">
    <ul class="crumbs">
        <li>Forum</li>
    </ul>
    <div><a href="">Create topic</a></div>
    <div class="main topics">
        <h2>Latest topics</h2>
        {% render 'HerzultForumBundle:Topic:list' with {'categorySlug': null, 'pagerOptions': {'page': page}} %}
    </div>
    <div class="side categories">
        <h2>Categories</h2>
        {% render 'HerzultForumBundle:Category:list' %}
    </div>
</div>
{% endblock %}

